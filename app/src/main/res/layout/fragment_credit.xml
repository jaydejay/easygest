<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingTop="10dp"
    android:paddingRight="5dp"
    android:paddingBottom="0dp"
    tools:context=".vue.ui.credit.CreditFragment">


        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linearLayoutnom"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                                <EditText
                                    android:id="@+id/edittxtcreernom"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:autofillHints="@string/nom_client"
                                    android:ems="10"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:hint="@string/nom_client"
                                    android:inputType="textPersonName"
                                    android:maxLength="20" />

                                <TextView
                                    android:id="@+id/txtcreercodeclt"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutprenoms"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayoutnom">

                                <EditText
                                    android:id="@+id/edittxtcreerprenoms"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:autofillHints="@string/prenoms"
                                    android:ems="10"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:hint="@string/prenoms_client"
                                    android:inputType="textPersonName"
                                    android:maxWidth="488dp"
                                    android:maxLength="20" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutarticle1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                                <EditText
                                    android:id="@+id/edittxtcreerarticle1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="2"
                                    android:autofillHints="@string/article_1"
                                    android:ems="10"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:hint="@string/article_1"
                                    android:inputType="textPersonName" />

                                <EditText
                                    android:id="@+id/edittxtcreerarticle1somme"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="2"
                                    android:autofillHints="@string/somme_article2"
                                    android:ems="10"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:hint="@string/zero"
                                    android:inputType="number"
                                    android:text="@string/zero" />

                                <EditText
                                    android:id="@+id/edittxtcreerNbrarticle1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:autofillHints="@string/quantite1"
                                    android:ems="10"
                                    android:hint="@string/quantite1"
                                    android:inputType="number" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayoutarticle1">

                                <EditText
                                    android:id="@+id/edittxtcreerarticle2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:autofillHints="@string/article_2"
                                    android:ems="10"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:hint="@string/article_2"
                                    android:inputType="textPersonName" />

                                <EditText
                                    android:id="@+id/edittxtcreerarticle2somme"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:autofillHints="@string/somme_article2"
                                    android:ems="10"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:hint="@string/zero"
                                    android:inputType="number"
                                    android:text="@string/zero" />

                                <EditText
                                    android:id="@+id/edittxtcreerNbrarticle2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:autofillHints="@string/quantite1"
                                    android:ems="10"
                                    android:hint="@string/quantite1"
                                    android:inputType="number" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout5"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                                <EditText
                                    android:id="@+id/editTextDate"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:autofillHints="@string/date_credit"
                                    android:ems="10"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:hint="@string/date_credit"
                                    android:inputType="textPersonName" />

                                <EditText
                                    android:id="@+id/edittxtcreerversement"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:autofillHints="@string/versement"
                                    android:ems="10"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:hint="@string/versement"
                                    android:inputType="number" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayouttelephone"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

                                <EditText
                                    android:id="@+id/edittxtcreertelephone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:autofillHints="@string/telephone"
                                    android:ems="10"
                                    android:gravity="center"
                                    android:hint="@string/telephone"
                                    android:inputType="phone"
                                    android:maxLength="10" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayouttelephone">

                                <Button
                                    android:id="@+id/btncreercredit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/enregistrer" />

                        </LinearLayout>
                </LinearLayout>
        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>